---
import "$lib/app.css";
import Toast from "$lib/components/Toast.svelte";
import { ViewTransitions } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Corro-Kun">
		<ViewTransitions fallback="none" />
		<title>{title}</title>
	</head>
	<body>
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] overflow-x-hidden overflow-y-auto">
			<slot />
		</div>
		<Toast client:load />
	</body>
</html>
<style is:global>

	:root {
		--color-primary: #00578a;
	}
	input[type="number"]::-webkit-inner-spin-button,
  	input[type="number"]::-webkit-outer-spin-button {
    	-webkit-appearance: none;
    	margin: 0;
  	}
  	input[type="number"] {
  	  -moz-appearance: textfield;
  	}
	div::-webkit-scrollbar {
		background: transparent;
    	height: 10px;
    	width: 8px;
	}

</style>
